    <rect x="100" y="0" width="80" height="40" rx="20" fill="#f59e0b"/>
    <text x="140" y="28" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#ffffff" text-anchor="middle">N</text>
    
    <rect x="200" y="0" width="80" height="40" rx="20" fill="#ef4444"/>
    <text x="240" y="28" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#ffffff" text-anchor="middle">Z</text>
    
    <rect x="300" y="0" width="80" height="40" rx="20" fill="#8b5cf6"/>
