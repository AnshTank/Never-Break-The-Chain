    <ellipse cx="0" cy="0" rx="40" ry="60" stroke="#ffffff" stroke-width="12" fill="none" transform="rotate(-45)"/>
    <ellipse cx="80" cy="80" rx="40" ry="60" stroke="#ffffff" stroke-width="12" fill="none" transform="rotate(45)"/>
