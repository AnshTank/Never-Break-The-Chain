# PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to .env.production and fill in your production values
# NEVER commit production secrets to Git

# Database Configuration
MONGODB_URL="mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&ssl=true"

# JWT Configuration - Generate new 256-bit secrets for production
JWT_SECRET="GENERATE_NEW_256_BIT_SECRET_FOR_PRODUCTION"

# Email Configuration - Production Gmail Setup
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-production-email@gmail.com"
EMAIL_PASSWORD="your-production-app-password"
EMAIL_FROM="Never Break The Chain <your-production-email@gmail.com>"
ADMIN_EMAIL="anshtank9@gmail.com"

# Application Configuration
NODE_ENV="production"
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="GENERATE_NEW_SECRET_FOR_NEXTAUTH"

# Optional: Custom Domain Email (if not using Gmail)
# EMAIL_HOST="smtp.yourdomain.com"
# EMAIL_PORT=587
# EMAIL_USER="noreply@yourdomain.com"
# EMAIL_PASSWORD="your-smtp-password"

# Security Configuration (Optional)
# ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
# RATE_LIMIT_REDIS_URL="redis://localhost:6379" # For distributed rate limiting

# Monitoring (Optional)
# SENTRY_DSN="your-sentry-dsn"
# ANALYTICS_ID="your-analytics-id"